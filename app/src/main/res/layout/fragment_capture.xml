<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.benjaminearley.zapdos.CaptureActivityFragment"
    tools:showIn="@layout/activity_capture">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <AutoCompleteTextView
                android:id="@+id/pokemonSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:imeActionId="@+id/submit"
                android:imeOptions="actionGo"
                android:textColor="@color/black_87"
                android:hint="What You Catch?"/>

        </android.support.design.widget.TextInputLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>
